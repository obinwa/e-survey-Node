doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    link(rel='stylesheet', href='/css/main.css')
    link(rel='stylesheet', href='/bootstrap.min.css')
    title Document
  body
    .bg-color-full
      .form-wrapper
        block messages
          if locals.flashes
            .inner.inner--flashes
              .flash-messages
                - const categories = Object.keys(locals.flashes)
                each category in categories
                  each message in flashes[category]
                    .flash(class=`flash--${category}`)
                      p.flash__text!= message
                      button.flash__remove(onClick="this.parentElement.remove()") &times;
      .row
        .banner-heading.text-white.bg-dark.text-center
          h3.login-heading Welcome to BlockOutChasing
        .col-sm-3
        .col-sm-6.login
          .panel.panel-primary
            .panel-heading
              h3.panel-title Register
            .panel-body
              form.login-form.form-horizontal(name='contact_form', method='post', action='/register')

                fieldset
                  .form-group
                    label.col-sm-2.control-label(for='firstname')
                      span.required
                      | Firstname:
                    .col-sm-10
                      input#firstname.form-control(type='text', value='', placeholder='Firstname', name='firstname', required='')
                  .form-group
                    label.col-sm-2.control-label(for='lastname')
                      span.required
                      | Lastname:
                    .col-sm-10
                      input#lastname.form-control(type='text', value='', placeholder='Lastname', name='lastname', required='')
                  .form-group
                    label.col-sm-2.control-label(for='email')
                      span.required
                      | Email:
                    .col-sm-10
                      input#email.form-control(type='email', value='', placeholder='Email', name='email', required='')
                  .form-group
                    label.col-sm-2.control-label(for='password')
                      span.required
                      | Password:
                    .col-sm-10
                      input#password.form-control(type='password', value='', placeholder='Password', name='password', required='')
                  .form-group
                    label.col-sm-2.control-label(for='password')
                      span.required
                      | Confirm Password:
                    .col-sm-10
                      input#password-confirm.form-control(type='password', value='', placeholder='confirm password', name='password-confirm', required='')
                  .form-group
                    .col-sm-10.col-sm-offset-2
                      button.btn.btn-primary(type='submit') Submit
